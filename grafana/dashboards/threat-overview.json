          "rawSql": "SELECT \n  $__timeGroup(timestamp,'15m') as time,\n  COUNT(CASE WHEN source_table = 'process_events' THEN 1 END) as \"Process Events\",\n  COUNT(CASE WHEN source_table = 'file_events' THEN 1 END) as \"File Events\",\n  COUNT(CASE WHEN source_table = 'network_events' THEN 1 END) as \"Network Events\"\nFROM (\n  SELECT timestamp, 'process_events' as source_table FROM process_events WHERE $__timeFilter(timestamp)\n  UNION ALL\n  SELECT timestamp, 'file_events' as source_table FROM file_events WHERE $__timeFilter(timestamp)\n  UNION ALL\n  SELECT timestamp, 'network_events' as source_table FROM network_events WHERE $__timeFilter(timestamp)\n) as all_events\nGROUP BY time\nORDER BY time",
